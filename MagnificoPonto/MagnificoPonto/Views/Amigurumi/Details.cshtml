@model Amigurumi

<div class="container">
    <div class="row">
        <div class="card">

            <div class="text-center">
                <img src="@Model.ImagemUrl" class="img-fluid" alt="" />
            </div>

            <div class="card-block">
                <h2 class="card-title">@Model.Nome</h2>
                <p class="card-text"><h5>@Model.Descricao</h5></p>

                <p class="btn btn-group align-content-lg-end">
                    <a asp-controller="Amigurumi" asp-action="List" class="btn btn-outline-info">Ver todos os Amigurumis</a>
                    <a class="btn btn-primary" id="cartButton" asp-controller="CarrinhoCompra" asp-action="AdicionarItemNoCarrinhoCompra" asp-route-amigurumiId="@Model.AmigurumiId">Adicionar @Model.Nome ao carrinho</a>
                </p>
            </div>
        </div>
    </div>
</div>