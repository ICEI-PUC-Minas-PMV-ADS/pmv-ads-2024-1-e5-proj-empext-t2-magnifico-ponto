@model MagnificoPonto.Models.ProdutoModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Apagar</h1>
@*
<h3>Deseja realmente apagar os registros do produto?</h3>
*@
<div>
    <h4>Dados do produto</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Referencia)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Referencia)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Cor)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Cor)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Tamanho)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Tamanho)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Preco)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Preco)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.TempoConfeccao)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TempoConfeccao)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ProntaEntrega)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ProntaEntrega)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Apagar registros" class="btn btn-danger" />
        <div>
            <a class="btn btn-secondary" asp-action="Index">Retornar para a lista de produtos</a>
        </div>
    </form>
</div>
